@model AutoClub.Models.MainSlider;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-11 layout-spacing">
        <form method="post" enctype="multipart/form-data">
            <div class="statbox widget box box-shadow">
                <div class="widget-content widget-content-area">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                                <h4>Slider</h4>
                            </div>
                        </div>
                    </div>
                    <p class="">Slider Image</p>
                    <div class="input-group mb-4">
                        <input asp-for="Photo" class="form-control-file" id="exampleFormControlFile1">
                        <span asp-validation-for="Photo" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <p class="">Slider Title</p>
                    <div class="input-group mb-4">
                        <input asp-for="SliderTitle" id="t-text" class="form-control">
                        <span asp-validation-for="SliderTitle" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <p class="">Slider SubTitle</p>
                    <div class="input-group mb-4">
                        <input asp-for="SliderSubTitle" id="t-text" class="form-control">
                        <span asp-validation-for="SliderSubTitle" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <p class="">Slider Main</p>
                    <div class="input-group mb-4">
                        <input asp-for="SliderMain" id="t-text" class="form-control">
                        <span asp-validation-for="SliderMain" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-primary btn-block my-3">Save changes</button>
                        <br />
                        <a asp-controller="MainSlider" asp-action="Index" class="btn btn-outline-secondary btn-block">Go Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

