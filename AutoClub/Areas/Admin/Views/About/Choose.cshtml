@using AutoClub.Models;
@model List<AboutUsChoseUs>
@{
    ViewData["Title"] = "Choose";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-11 layout-spacing">
        <form method="post" enctype="multipart/form-data">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                            <h4>Offers Items</h4>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table mb-4">
                        <caption>List of all Offers</caption>
                        <thead>
                            <tr>
                                <th class="text-center">Details</th>
                                <th class="text-center">Edit</th>
                                <th class="text-center">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.Description</td>
                                    <td class="text-center">
                                        <ul class="table-controls d-flex justify-content-center m-0 p-0" style="list-style:none;">
                                            <li class="mx-2"><a asp-area="Admin" asp-controller="About" asp-action="ChooseUpdate" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                                        </ul>
                                    </td>
                                    <td class="text-center">
                                        <ul class="table-controls d-flex justify-content-center m-0 p-0" style="list-style:none;">
                                            <li class="mx-2"><a asp-area="Admin" asp-controller="About" asp-action="DeleteChoose" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-12">
                    <button asp-area="Admin" asp-controller="About" asp-action="ChooseCreate" class="btn btn-outline-primary btn-block my-3">Create New Choose Item</button>
                </div>
            </div>
        </form>
    </div>
</div>