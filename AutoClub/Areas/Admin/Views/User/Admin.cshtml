@using AutoClub.Models;
@model IList<AppUser>
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-11 layout-spacing">
        <form method="post">
            <div class="statbox widget box box-shadow">
                <div class="widget-content widget-content-area">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                                <h4>Admin / Total number: @Model.Count()</h4>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table mb-4">
                            <caption>List of all Member</caption>
                            <thead>
                                <tr>
                                    <th class="text-center">Image</th>
                                    <th class="text-center"></th>
                                    <th class="text-center">UserName</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Make User</th>
                                    <th class="text-center">Make Member</th>
                                    <th class="text-center">Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (AppUser user in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <img src="~/image/Users/@user.Image" width="80" />
                                        </td>
                                        <td class="text-center"></td>
                                        <td class="text-center">@user.UserName</td>
                                        <td class="text-center">@user.Email</td>
                                        <td class="text-center">
                                            <a asp-controller="User" asp-action="ConfirmUserAdmin" asp-route-id="@user.Id" class="btn btn-outline-success  btn-block mb-2 umakeuser"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-down"><line x1="12" y1="5" x2="12" y2="19"></line><polyline points="19 12 12 19 5 12"></polyline></svg></a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="User" asp-action="ConfirmUserAdmin" asp-route-id="@user.Id" class="btn btn-outline-success  btn-block mb-2 umakemember"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-down"><line x1="12" y1="5" x2="12" y2="19"></line><polyline points="19 12 12 19 5 12"></polyline></svg></a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="User" asp-action="ConfirmUserAdmin" asp-route-id="@user.Id" class="btn btn-outline-danger  btn-block mb-2 deleteusera"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/admin/plugins/sweetalerts/sweetalert2.min.js"></script>
    <script src="~/admin/plugins/sweetalerts/custom-sweetalert.js"></script>
    <link href="~/admin/plugins/sweetalerts/sweetalert2.min.css" rel="stylesheet" type="text/css">
    <link href="~/admin/plugins/sweetalerts/sweetalert.css" rel="stylesheet" type="text/css">
    <link href="~/admin/assets/css/components/custom-sweetalert.css" rel="stylesheet" type="text/css">
}