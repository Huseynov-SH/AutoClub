@model AutoClub.Models.ShopSubCategory
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-8 layout-spacing">
        <form method="post" enctype="multipart/form-data">
            <div class="statbox widget box box-shadow">
                <div class="widget-content widget-content-area">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                                <h4>SubCategory</h4>
                            </div>
                        </div>
                    </div>
                    <p class="">Select Category</p>
                    <div class="input-group mb-4">
                        <select asp-for="ShopCategoryId" class="form-control">
                            @foreach (var category in @ViewBag.category)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ShopCategoryId" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <p class="">SubCategory Name</p>
                    <div class="input-group mb-4">
                        <input asp-for="Name" id="t-text" class="form-control">
                        <span asp-validation-for="Name" class="text-danger mt-2 ml-5" style="width:100%;"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-primary btn-block mt-3">Save Change</button>
                        <br />
                        <a asp-controller="ShopSubCategory" asp-action="Index" class="btn btn-outline-secondary btn-block">Go Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}