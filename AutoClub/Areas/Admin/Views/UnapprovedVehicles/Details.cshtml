@model AutoClub.ViewModels.DetailsVM;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-11 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-content widget-content-area">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                            <h4>Vehicle Images</h4>
                        </div>
                    </div>
                </div>
                <div class="avatar avatar-xl row justify-content-around">
                    @foreach (var image in Model.VehicleImages)
                    {
                        if (image.VehicleId == Model.Vehicle.Id)
                        {
                            <img src="~/image/Items/@image.Name" class="rounded" width="150" />
                        }
                    }
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-lg-8 layout-spacing">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-5 mb-3 text-center">
                                    <h4>Vehicle Details</h4>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Manufacturer Year</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">$@Model.Vehicle.Price</td>
                                        <td class="text-center">@Model.Vehicle.VehicleManufacturerYear</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">No. of Seats</th>
                                        <th class="text-center">No. of Doors</th>
                                        <th class="text-center">No. of Cylinders</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.Vehicle.NoOfSeats</td>
                                        <td class="text-center">@Model.Vehicle.NoOfDoors</td>
                                        <td class="text-center">@Model.Vehicle.NoOfCylinders</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Engine Capacity (sm<sup>3</sup>)</th>
                                        <th class="text-center">City Fuel Economy (L/100km)</th>
                                        <th class="text-center">Highway Fuel Economy (L/100km)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.Vehicle.EngineCapacity</td>
                                        <td class="text-center">@Model.Vehicle.CityFuelEconomy</td>
                                        <td class="text-center">@Model.Vehicle.HwyFuelEconomy</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Vehicle.VideoLink != null)
                        {
                            <div class="table-responsive">
                                <table class="table mb-2">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Video Link</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center"><a href="@Model.Vehicle.VideoLink">@Model.Vehicle.VideoLink</a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                        @if (Model.Vehicle.Registration)
                        {
                            <div class="widget-header">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-3 mb-3 text-center">
                                        <h4>Registration Details</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table mb-2">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Plate Number</th>
                                            <th class="text-center">Registerarion Number</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">@Model.Vehicle.RegistrationPlateNumber</td>
                                            <td class="text-center">@Model.Vehicle.RegistrationNumber</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="table-responsive">
                                <table class="table mb-2">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Expiry Month</th>
                                            <th class="text-center">Expiry Year</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">@Model.Vehicle.RegistrationExpiryMonth</td>
                                            <td class="text-center">@Model.Vehicle.RegistrationExpiryYear</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                    <div class="col-lg-11 layout-spacing text-center">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-3 mb-3 text-center">
                                    <h4>Vehicle Description</h4>
                                </div>
                            </div>
                        </div>
                        <p>@Model.Vehicle.Description</p>
                    </div>
                    <div class="col-lg-8 layout-spacing">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-3 mb-3 text-center">
                                    <h4>Contact details</h4>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Vehicle Current Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.Vehicle.CurrentAddress</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">City / State</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.Vehicle.City</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Vehicle.ZipCode != null)
                        {
                            <div class="table-responsive">
                                <table class="table mb-2">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Zip Code</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">@Model.Vehicle.ZipCode</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Phone Number</th>
                                        <th class="text-center">Email Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.Vehicle.PhoneNumber</td>
                                        <td class="text-center">@Model.Vehicle.Email</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="row py-3">
                            <div class="col-6">
                                <a asp-controller="UnapprovedVehicles" asp-action="Confirm" asp-route-id="@Model.Vehicle.Id" class="btn btn-outline-success  btn-block mb-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg></a>
                            </div>
                            <div class="col-6">
                                <a asp-controller="UnapprovedVehicles" asp-action="Delete" asp-route-id="@Model.Vehicle.Id" class="btn btn-outline-danger  btn-block mb-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></a>
                            </div>
                            <div class="col-12 mt-2">
                                <a asp-controller="UnapprovedVehicles" asp-action="Index" class="btn btn-outline-secondary btn-block">Go Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>