@model AutoClub.ViewModels.ShopVM;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center my-5">
    <div class="col-lg-11 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-content widget-content-area">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12 mb-4">
                            <h4>Product Images</h4>
                        </div>
                    </div>
                </div>
                <div class="avatar avatar-xl row justify-content-around">
                    @foreach (var image in Model.ShopProductImages)
                    {
                        <img src="~/image/Shop/@image.Name" class="rounded" width="150" />
                    }
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-lg-8 layout-spacing">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-5 mb-3 text-center">
                                    <h4>Product Details</h4>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Title</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">$@Model.ShopProduct.Title</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-center">Caunt</th>
                                        <th class="text-center">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="text-center">@Model.ShopProduct.Count</td>
                                        <td class="text-center">@Model.ShopProduct.Price</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-11 layout-spacing text-center">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12 mt-3 mb-3 text-center">
                                    <h4>Product Description</h4>
                                </div>
                            </div>
                        </div>
                        <p>@Model.ShopProduct.Description</p>
                    </div>
                    <div class="col-8">
                        <div class="row py-3">
                            <div class="col-6">
                                <a asp-controller="UnapprovedShopProduct" asp-action="Confirm" asp-route-id="@Model.ShopProduct.Id" class="btn btn-outline-success  btn-block mb-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg></a>
                            </div>
                            <div class="col-6">
                                <a asp-controller="UnapprovedShopProduct" asp-action="Delete" asp-route-id="@Model.ShopProduct.Id" class="btn btn-outline-danger  btn-block mb-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg></a>
                            </div>
                            <div class="col-12 mt-2">
                                <a asp-controller="UnapprovedShopProduct" asp-action="Index" class="btn btn-outline-secondary btn-block">Go Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>