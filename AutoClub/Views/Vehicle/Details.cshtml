    <!-- * * *Start- Related Vehicles * * * -->
    <section id="RelatedVehicles">
        <div class="container">
            <h5 class="section_subtitle">FIND OUT MORE</h5>
            <br />
            <h2 class="section_title">RELATED VEHICLES ON SALE</h2>
            <div class="row">
                @{int MaxCount = 0;}
                @foreach (var relatedVehicles in Model.RelatedVehicles)
                {
                    if (MaxCount <= 12)
                    {
                        <div class="col-12 col-sm-6 col-md-3">
                            <div class="related_item">
                                @{int imgCount = 0;}
                                @foreach (var image in Model.VehicleImages)
                                {
                                    if (image.VehicleId == relatedVehicles.Id && imgCount == 0)
                                    {
                                        <img src="~/image/Items/@image.Name" alt="" />
                                        imgCount += 1;
                                    }
                                }
                                <div class="related_item_val">Model<span>@relatedVehicles.VehicleManufacturerYear</span></div>
                                <h2>
                                    <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@relatedVehicles.Id">
                                        @foreach (var item in ViewBag.make)
                                        {
                                            if (item.Id == Model.Vehicle.VehicleModel.MakeId)
                                            {
                                                @item.Name
                                            }
                                        }
                                        @relatedVehicles.VehicleModel.Name
                                    </a>
                                </h2>
                                <div class="related_item_info row mx-0">
                                    <span class="itemPrice">$@relatedVehicles.Price</span>
                                    <span class="itemNumber">
                                        <span class="fa fa-tachometer"></span> @relatedVehicles.Mileage KM
                                    </span>
                                </div>
                                <div class="related_item_links">
                                    <a>@relatedVehicles.Status</a>
                                    <a>@relatedVehicles.VehicleManufacturerYear</a>
                                    <a>@relatedVehicles.TransmissionType.Name</a>
                                    <a>@relatedVehicles.ExteriorColor</a>
                                    <a>@relatedVehicles.FuelType.Name</a>
                                </div>
                            </div>
                        </div>

                    }
                    MaxCount += 1;
                }
            </div>
        </div>
    </section>
