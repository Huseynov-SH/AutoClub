@model AutoClub.Models.ShopProduct;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auto Club</title>
    <link rel="shortcut icon" href="~/image/logo/favicon.png">
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <!-- * * * FontAwesome * * *  -->
    <script src="https://kit.fontawesome.com/d010444104.js"
            crossorigin="anonymous"></script>
    <!-- * * * Google Fonts * * * -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600|PT+Sans|Titillium+Web:400,700&display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:700&display=swap"
          rel="stylesheet" />
    <!-- * * *  Owl Carousel * * * -->
    <link rel="stylesheet"
          href="~/extensions/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css" />
    <link rel="stylesheet"
          href="~/extensions/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css" />
    <!-- * * * Range Slider * * * -->
    <link rel="stylesheet"
          href="~/extensions/ion.rangeSlider-master/css/ion.rangeSlider.min.css" />
    <!-- * * * Css * * * -->
    <link rel="stylesheet" href="~/css/scss/style.css" />
</head>
<body>
    <!-- * * *Start- Top Bar * * *-->
    @await Component.InvokeAsync("HeaderTopBar")
    <!-- * * *End- Top Bar * * *-->
    <!-- * * *Start- Navbar * * * -->
    @await Component.InvokeAsync("NavMain")
    <!-- * * *End- Navbar * * * -->
    <section style="padding:100px 0;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-8">
                    <form method="post" enctype="multipart/form-data" class="py-3">
                        <div class="form-group">
                            <label class="form-control-label">Category</label>
                            <select asp-items="@(new SelectList(ViewBag.category,"Id","Name"))" class="form-control" id="SelectCategory">
                                <option value="0">Select a Category </option>
                            </select>
                            <span asp-validation-for="ShopSubCategory" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">SubCategory</label>
                            <select asp-for="ShopSubCategoryId" asp-items="@(new SelectList(string.Empty,"Id","Name"))" class="form-control" id="SelectSubCategory">
                                <option value="0">Select a SubCategory</option>
                            </select>
                            <span asp-validation-for="ShopSubCategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photos" class="form-control-label"></label><sup> (You can upload up to 5 photos)</sup>
                            <input asp-for="Photos" multiple class="form-control">
                            <span asp-validation-for="Photos" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="form-control-label"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="form-control-label"></label>
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Count" class="form-control-label"></label>
                            <input asp-for="Count" class="form-control">
                            <span asp-validation-for="Count" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-outline-primary w-100 mt-5">Create</button>
                        </div>
                    </form>
                    <div class="col-12 p-0">
                        <a asp-controller="Account" asp-action="MyVehicle" class="btn btn-success btn-block">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- * * *Start- Footer * * * -->
    <footer id="Footer">
        <div class="container-fluid px-0">
            <div class="footet_top">
                <div class="row mx-0">
                    <div class="col-12 col-md-9 offset-md-3 px-0">
                        <ul>
                            <li>Low Prices, No Haggling</li>
                            <li>Largest Car Dealership</li>
                            <li>Multipoint Safety Check</li>
                        </ul>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("FooterMain")
            @await Component.InvokeAsync("FooterBottom")
        </div>
    </footer>
    <!-- * * *End- Footer * * * -->
    <!-- * * * Scripts * * * -->
    <!--Bootstrap-->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

    <!-- * * * JQuery * * * -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <!-- * * *  Owl Carousel * * * -->
    <script src="~/extensions/OwlCarousel2-2.3.4/dist/owl.carousel.min.js"></script>

    <!-- * * * Range Slider * * * -->
    <script src="~/extensions/ion.rangeSlider-master/js/ion.rangeSlider.min.js"></script>
    <script>
    $(function () {
        $("#SelectCategory").change(function () {
            var url = '@Url.Content("~/")' + "Ajax/SubCategoryFilterByCategory";
            var ddlsource = "#SelectCategory";
            $.getJSON(url, { id: $(ddlsource).val() }, function (data) {
                var items = '';
                $("#SelectSubCategory").empty();
                $.each(data, function (i, row) {
                    items += "<option value='" + row.value +" '> " + row.text + "</option>";
                });
                $("#SelectSubCategory").html(items);
            })
        });
    });
    </script>
    <!-- * * * My Js * * * -->
    <script src="~/js/script.js"></script>
</body>
</html>
