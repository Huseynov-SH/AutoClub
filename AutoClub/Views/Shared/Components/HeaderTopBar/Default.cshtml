@model AutoClub.Models.WebSiteBio;
@{
    Layout = null;
}

<!-- * * *Start- Top Bar * * *-->
<header class="top-bar">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-4 col-xs-6">
                <div class="top-bar_addr">
                    <i class="fa fa-map-marker"></i>
                    @Model.Address
                </div>
            </div>
            <div class="col-md-2 col-xs-6">
                <div class="top-bar_tel">
                    <i class="fa fa-phone"></i>
                    @Model.Phone
                </div>
            </div>
            <div class="col-md-4 col-xs-6">
                <nav class="top-bar_nav">
                    <ul class="row justify-content-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin") || User.IsInRole("Member"))
                            {
                                <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="text-transform: none">@User.Identity.Name</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="MyVehicle" style="text-transform: none">@User.Identity.Name</a></li>
                            }
                            <li><a asp-controller="Cart" asp-action="Index" class="reg" style="text-transform: none">Cart</a></li>
                            <li><a asp-controller="User" asp-action="Logout" class="reg" style="text-transform: none">Logout</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="User" asp-action="Login">Login</a></li>
                            <li><a class="reg" asp-controller="User" asp-action="Register">Register</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- * * *End- Top Bar * * *-->
